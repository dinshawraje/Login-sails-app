<div class="container">
	<h3>users</h3>
	<table class="table">
		<tr>
            <th></th>
			<th>ID</th>
			<th>name</th>
			
			<th>Email</th>
			<th></th>
			<th></th>
			<th></th>
		</tr>
        <% _.each(users, function(user){ %>
			<tr data-id="<%= user.id %>" data-model="user" >
	            
	            <td><%= user.id %></td>
				<td><%= user.name %></td>
				
				<td><%= user.email %></td>
	            
				<td><a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">Show</a></td>
				<td><a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">Edit</a></td>
	            <td>
                <form action="/user/destroy/<%= user.id %>" method="POST">
                    <input value="delete" name="_method" id="_method" type="hidden" />
                    <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                    <input type="submit" class="btn btn-sm btn-danger" value="Destroy"/>
                </form>
            </td>
			</tr>
        <% }); %>
	</table>
</div>


